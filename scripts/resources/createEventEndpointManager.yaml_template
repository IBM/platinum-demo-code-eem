metadata:
  name: ademo-eem
  namespace: {{NAMESPACE}}
spec:
  license:
    accept: true
    license: L-AUKS-FKVXVL
    metric: VIRTUAL_PROCESSOR_CORE
    use: EventAutomationNonProduction
  manager:
    authConfig:
      authType: LOCAL
    apic:
      jwks:
        endpoint: {{JWKS_ENDPOINT}}
    storage:
      type: persistent-claim
      storageClassName: ocs-external-storagecluster-ceph-rbd
      deleteClaim: true
    template:
      pod:
        spec:
          containers:
            - name: manager
              resources:
                requests:
                  cpu: '0.25'
                  memory: 256Mi
                limits:
                  cpu: '0.5'
                  memory: 512Mi
    tls:
      trustedCertificates:
        - certificate: apic-platform.crt
          secretName: apic-platform-cert
